<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0E0E"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".MainActivity">
<!--    weight sum means the number of rows or columns we want in our layout. We have provided 6 here, which means that the layout will contain 6 rows at max, if the number of rows exceed that, then those rows won't be visible the way we want.-->

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|right"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:background="@drawable/result_textview"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/ac"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="AC"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/power"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="^"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="Â«"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"


            />

        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"


            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"


            />

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"


            />

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"


            />

        <Button
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="*"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/subtract"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/decimal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="."
            android:textColor="@color/black"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/answer"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="ANS"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/equals"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bgpink"
            android:onClick="ButtonClick"
            android:text="="
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"

            />


    </LinearLayout>

</LinearLayout>